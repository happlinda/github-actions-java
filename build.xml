<?xml version="1.0" encoding="UTF-8" ?>
  <project name="AntTestDemo" default="run" basedir=".">
  <property name="src" value="src"/>
  <property name="dest" value="classes"/>
  <property name="helloactions_jar" value="helloactions.jar"/>
  <target name="init">
     <mkdir dir="${dest}"/>
  </target>
  <target name="compile" depends="init">
    <javac srcdir="${src}" destdir="${dest}"/>
 </target>
 <target name="build" depends="compile">
    <jar jarfile="${helloactions_jar}" basedir="${dest}"/>
 </target>
 <target name="run" depends="build">
    <java classname="com.linada.ant.test.HelloActions" classpath="${helloactions_jar}"/>
 </target>
 <target name="clean">
    <delete dir="${dest}" />
    <delete file="${helloactions_jar}" />
 </target>
 <target name="rerun" depends="clean,run">
    <ant target="clean" />
    <ant target="run" />
 </target>
</project>
